<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="kourosh.red.VolunteerEntity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBarLayout"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:layout_below="@+id/appBarLayout"
        android:id="@+id/id"
        android:text="10149436"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:layout_marginLeft="10dp"
        android:text="ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/id"
        android:layout_alignBottom="@+id/id"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginLeft="10dp"
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginLeft="10dp"
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignBottom="@+id/email"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginLeft="10dp"
        android:text="Faculty:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/faculty"
        android:layout_alignBottom="@+id/faculty"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginLeft="10dp"
        android:text="Join Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/joindate"
        android:layout_alignBottom="@+id/joindate"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="CPSC"
        android:ems="10"
        android:id="@+id/faculty"
        android:layout_below="@+id/email"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView13" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:text="kouroshb26@gmail.com"
        android:layout_below="@+id/name"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView12" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Kourosh Banaeianzadeh"
        android:ems="10"
        android:id="@+id/name"
        android:layout_below="@+id/id"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/joindate"
        android:text="2016-07-18"
        android:layout_below="@+id/faculty"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView14" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paid"
        android:layout_below="@+id/joindate"
        android:layout_alignStart="@+id/email" />

    <TextView
        android:text="Paid:"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/paid"
        android:layout_alignBottom="@+id/paid"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="President"
        android:ems="10"
        android:id="@+id/position"
        android:layout_below="@+id/paid"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView15" />

    <TextView
        android:text="Position:"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/position"
        android:layout_alignBottom="@+id/position"
        android:layout_alignParentStart="true" />


</RelativeLayout>

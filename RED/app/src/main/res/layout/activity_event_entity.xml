<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="kourosh.red.VolunteerEntity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBarLayout"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:id="@+id/school"
        android:text="SchoolName"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_marginLeft="10dp"
        android:text="School:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginEnd="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/school"
        android:layout_alignBottom="@+id/school"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:ems="10"
        android:layout_below="@+id/school"
        android:layout_alignParentEnd="true"
        android:id="@+id/date"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:layout_marginLeft="10dp"
        android:text="Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/date"
        android:layout_alignParentEnd="true"
        android:id="@+id/teacher"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_marginLeft="10dp"
        android:text="Teacher:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/teacher"
        android:layout_alignBottom="@+id/teacher"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/teacher"
        android:layout_alignParentEnd="true"
        android:id="@+id/address"
        android:layout_toEndOf="@+id/textView16" />

    <TextView
        android:layout_marginLeft="10dp"
        android:text="Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/address"
        android:layout_alignBottom="@+id/address"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Sections:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/textView7"
        android:id="@+id/textView18"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView30" />

    <TextView
        android:text="Section#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView30"
        android:layout_below="@+id/textView18"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:text="Room#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView31"
        android:layout_below="@+id/textView18"
        android:layout_toStartOf="@+id/fab" />


</RelativeLayout>
